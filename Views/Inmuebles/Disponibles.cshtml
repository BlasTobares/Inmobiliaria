@model IEnumerable<Inmobiliaria.Models.Inmueble>
@{
    ViewData["Title"] = "Inmuebles Disponibles";
}

<h1>Inmuebles Disponibles</h1>
<p><a class="btn btn-secondary" asp-action="Index">Volver a Todos</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Direcci√≥n</th>
            <th>Uso</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Propietario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Direccion</td>
            <td>@x.Uso</td>
            <td>@x.Tipo</td>
            <td>@x.Ambientes</td>
            <td>$ @x.PrecioBase</td>
            <td>@x.PropietarioNombre</td>
            <td>
                <a asp-action="Details" asp-route-id="@x.Id" class="btn btn-info btn-sm">Detalles</a>
                <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
