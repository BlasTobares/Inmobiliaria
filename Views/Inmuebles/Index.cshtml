@model IEnumerable<Inmobiliaria.Models.Inmueble>
@{
    ViewData["Title"] = "Inmuebles";
}
<h1>Inmuebles</h1>
<p><a class="btn btn-primary" asp-action="Create">Nuevo Inmueble</a></p>

<table class="table">
