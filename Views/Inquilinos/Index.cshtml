@model IEnumerable<Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
}

<h1 class="mb-4">Listado de Inquilinos</h1>

<p>
    <a class="btn btn-success" asp-action="Create">➕ Nuevo Inquilino</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>DNI</th>
            <th>Nombre Completo</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.DNI</td>
            <td>@item.NombreCompleto</td>
            <td>@item.Telefono</td>
            <td>@item.Email</td>
            <td class="text-center">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>

