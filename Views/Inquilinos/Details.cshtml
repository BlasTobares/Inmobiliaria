@model Inmobiliaria.Models.Inquilino

@{
    ViewData["Title"] = "Detalles Inquilino";
}

<h1 class="mb-4">Detalles del Inquilino</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">DNI</dt>
            <dd class="col-sm-9">@Model.DNI</dd>

            <dt class="col-sm-3">Nombre Completo</dt>
            <dd class="col-sm-9">@Model.NombreCompleto</dd>

            <dt class="col-sm-3">Tel√©fono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        </div>
    </div>
</div>
