@model Inmobiliaria.Models.Contrato
@{
    ViewData["Title"] = "Detalles Contrato";
}

<h1>Detalles del Contrato</h1>

<dl class="row">
    <dt class="col-sm-2">Inmueble</dt>
    <dd class="col-sm-10">@Model.InmuebleDireccion</dd>

    <dt class="col-sm-2">Inquilino</dt>
    <dd class="col-sm-10">@Model.InquilinoNombre</dd>

    <dt class="col-sm-2">Fecha Inicio</dt>
    <dd class="col-sm-10">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Fecha Fin</dt>
    <dd class="col-sm-10">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Monto Mensual</dt>
    <dd class="col-sm-10">@Model.MontoMensual.ToString("C")</dd>

    <dt class="col-sm-2">Dep√≥sito</dt>
    <dd class="col-sm-10">@Model.Deposito</dd>

    <p><strong>Creado por:</strong> @Model.CreatedByUserName (@Model.CreatedAt)</p> @if (Model.EndedByUserName != null)
    { <p><strong>Finalizado por:</strong> @Model.EndedByUserName (@Model.EndedAt)</p> }


    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
