@model Inmobiliaria.Models.Contrato
@{
    ViewData["Title"] = "Eliminar Contrato";
}
<h1>Eliminar Contrato</h1>

<h3>Â¿Seguro que quieres eliminar este contrato?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Inmueble</dt>
        <dd class="col-sm-10">@Model.InmuebleDireccion</dd>
        <dt class="col-sm-2">Inquilino</dt>
        <dd class="col-sm-10">@Model.InquilinoNombre</dd>
        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.MontoMensual</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
