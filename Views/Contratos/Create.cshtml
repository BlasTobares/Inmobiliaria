@model Inmobiliaria.Models.Contrato
@{
    ViewData["Title"] = "Nuevo Contrato";
}

<h1>Nuevo Contrato</h1>

<!-- üî¥ Esto muestra los errores que pusiste con ModelState.AddModelError -->
<div asp-validation-summary="All" class="alert alert-danger"></div>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Inmueble</label>
        <select asp-for="IdInmueble" class="form-control"
                asp-items="@(new SelectList(ViewBag.Inmuebles, "Id", "Direccion"))">
        </select>
        <span asp-validation-for="IdInmueble" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Inquilino</label>
        <select asp-for="IdInquilino" class="form-control"
                asp-items="@(new SelectList(ViewBag.Inquilinos, "Id", "NombreCompleto"))">
        </select>
        <span asp-validation-for="IdInquilino" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Fecha Inicio</label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Fecha Fin</label>
        <input asp-for="FechaFin" type="date" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Monto Mensual</label>
        <input asp-for="MontoMensual" class="form-control" />
        <span asp-validation-for="MontoMensual" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Dep√≥sito</label>
        <input asp-for="Deposito" class="form-control" />
        <span asp-validation-for="Deposito" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Estado</label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

