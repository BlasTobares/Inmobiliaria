@model IEnumerable<Inmobiliaria.Models.Contrato>
@{
    ViewData["Title"] = "Contratos";
}
<h1>Contratos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">âž• Nuevo Contrato</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Inmueble</th>
            <th>Inquilino</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.InmuebleDireccion</td>
            <td>@c.InquilinoNombre</td>
            <td>@c.FechaInicio.ToString("dd/MM/yyyy")</td>
            <td>@c.FechaFin.ToString("dd/MM/yyyy")</td>
            <td>@c.MontoMensual.ToString("C")</td>
            <td>@c.Estado</td>
            <td>
                <a asp-action="Details" asp-route-id="@c.Id">Detalles</a> |
                <a asp-action="Edit" asp-route-id="@c.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@c.Id">Eliminar</a>

                <a asp-controller="Pagos" asp-action="Create" asp-route-contratoId="@c.Id" 
                class="btn btn-success btn-sm">
                ðŸ’° Registrar Pago
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

