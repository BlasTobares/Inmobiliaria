@model Inmobiliaria.Models.Pago
@{
    var contrato = ViewBag.Contrato as Inmobiliaria.Models.Contrato;
}

<h2>Registrar Pago</h2>

<div class="alert alert-info">
    <strong>Contrato:</strong> @contrato?.InmuebleDireccion <br />
    <strong>Inquilino:</strong> @contrato?.InquilinoNombre <br />
    <strong>Monto Mensual:</strong> @contrato?.MontoMensual.ToString("C")
</div>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="IdContrato" />

    <div class="form-group">
        <label asp-for="Fecha" class="control-label"></label>
        <input asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Importe" class="control-label"></label>
        <input asp-for="Importe" class="form-control" />
        <span asp-validation-for="Importe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Detalle" class="control-label"></label>
        <textarea asp-for="Detalle" class="form-control"></textarea>
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" asp-route-contratoId="@Model.IdContrato" class="btn btn-secondary">Volver</a>
</form>

