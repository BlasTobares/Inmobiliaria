@model Inmobiliaria.Models.Pago
@{
    ViewData["Title"] = "Editar Pago";
}

<h1>Editar Pago</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Contrato</label>
        <select asp-for="IdContrato" class="form-control"
                asp-items="@(new SelectList(ViewBag.Contratos, "Id", "ContratoInfo", Model.IdContrato))">
        </select>
    </div>
    <div class="form-group">
        <label>Nro Pago</label>
        <input asp-for="NroPago" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fecha</label>
        <input asp-for="Fecha" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Importe</label>
        <input asp-for="Importe" class="form-control" />
    </div>
    <div class="form-group">
        <label>Detalle</label>
        <input asp-for="Detalle" class="form-control" />
    </div>
    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control">
            <option value="Activo" selected="@("Activo" == Model.Estado)">Activo</option>
            <option value="Anulado" selected="@("Anulado" == Model.Estado)">Anulado</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
