@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h1>Editar Usuario</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label>Apellido</label>
        <input asp-for="Apellido" class="form-control" />
    </div>

    <div class="form-group">
        <label>Rol</label>
        <select asp-for="Rol" class="form-control">
            <option value="Admin">Admin</option>
            <option value="Empleado">Empleado</option>
        </select>
    </div>

    <div class="form-group">
        <label>Avatar</label><br />
        @if (!string.IsNullOrEmpty(Model.AvatarPath))
        {
            <img src="@Url.Content(Model.AvatarPath)" style="width:80px;height:80px;border-radius:50%" />
            <br />
            <div class="form-check">
    <input type="checkbox" class="form-check-input" name="removeAvatar" value="true" id="removeAvatar" />
    <label class="form-check-label" for="removeAvatar">Eliminar avatar</label>
</div>

        }
        <input type="file" name="avatarFile" class="form-control mt-2" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

