@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
}

<h1>Mi Perfil</h1>

<form asp-action="Perfil" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label>Apellido</label>
        <input asp-for="Apellido" class="form-control" />
    </div>

    <div class="form-group">
        <label>Avatar</label><br />
        @if (!string.IsNullOrEmpty(Model.AvatarPath))
        {
            <img src="@Url.Content(Model.AvatarPath)" style="width:80px;height:80px;border-radius:50%" />
            <br />
            <button type="submit" name="removeAvatar" value="true" class="btn btn-sm btn-outline-danger mt-2">Eliminar Avatar</button>
        }
        <input type="file" name="avatarFile" class="form-control mt-2" />
    </div>

    <hr />

    <div class="form-group">
        <label>Nueva contrase√±a</label>
        <input type="password" name="nuevaPassword" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>
