@model Inmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Detalles Usuario";
}

<h1>Detalles de Usuario</h1>

<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>
    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.Rol</dd>
    <dt class="col-sm-2">Avatar</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.AvatarPath))
        {
            <img src="@Url.Content(Model.AvatarPath)" style="width:80px;height:80px;border-radius:50%" />
        }
        else
        {
            <span>Sin avatar</span>
        }
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
