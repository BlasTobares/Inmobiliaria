@model Inmobiliaria.Models.Propietario
@{
    ViewData["Title"] = "Eliminar Propietario";
}

<h1>Eliminar Propietario</h1>

<div class="alert alert-danger">
    ¿Seguro que deseas eliminar a <strong>@Model.Apellido, @Model.Nombre</strong>?
</div>

<div class="card">
    <div class="card-body">
        <p><strong>DNI:</strong> @Model.DNI</p>
        <p><strong>Teléfono:</strong> @Model.Telefono</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

