@model Inmobiliaria.Models.Propietario
@{
    ViewData["Title"] = "Detalles Propietario";
}

<h1>Detalles del Propietario</h1>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Apellido, @Model.Nombre</h5>
        <p class="card-text"><strong>DNI:</strong> @Model.DNI</p>
        <p class="card-text"><strong>Tel√©fono:</strong> @Model.Telefono</p>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>

